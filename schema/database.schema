// PostgreSQL Schema Definition
// Extensions Test - Installation of pgcrypto, postgis, and uuid-ossp
// Enums Test - Creation of enum types
// Enums Test - Modification (adding new values)

extension pgcrypto (version='1.3')
extension postgis
extension uuid-ossp

enum UserRole {
  ADMIN
  USER
  PUBLIC
  GUEST
  MODERATOR
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  ON_HOLD
} 